<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imgfood14"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Gradient Overlay -->
        <View
            android:id="@+id/gradientOverlay"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="transparent"
            android:padding="8dp"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintMarginStart="16dp"
            app:layout_constraintMarginTop="16dp" />

        <!-- Ratings and Favorite -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintMarginEnd="16dp"
            app:layout_constraintMarginTop="16dp">

            <!-- Star Rating -->
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.5"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Favorite Icon -->
            <ImageButton
                android:layout_margin="10dp"
                android:id="@+id/favoriteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_favorite_border_24"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:backgroundTint="@android:color/white" />
        </LinearLayout>

        <!-- Dish Title -->
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dishTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avocado Toast with Egg"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dishSubtitle"
            app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
            app:layout_constraintMarginStart="16dp"
            app:layout_constraintMarginBottom="16dp" />

        <!-- Dish Subtitle -->
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dishSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dominic Mysterio"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
            app:layout_constraintMarginStart="16dp"
            app:layout_constraintMarginBottom="16dp" />

        <!-- Timer -->
        <LinearLayout
            android:id="@+id/timeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginBottom="16dp"
            app:layout_constraintMarginEnd="16dp">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_timer"
                android:layout_marginEnd="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:padding="10dp"
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 minutes"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Ingredients Title -->
        <TextView
            android:id="@+id/ingredientsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Ingredients"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/backgroundImage"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Ingredients List -->
        <LinearLayout
            android:id="@+id/ingredientsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ingredientsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="- 2 Slices of Bread"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="- 1 Avocado"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="- 1 Egg"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="This dish is a perfect blend of creamy avocado, protein-packed egg, and crunchy bread for a quick and delicious breakfast."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/ingredientsList" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>